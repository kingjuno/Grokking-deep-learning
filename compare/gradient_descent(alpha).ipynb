   "source": [
    "weight = 0.5\n",
    "goal_pred = 0.8\n",
    "input = 2\n",
    "alpha = 0.1"
   ],
   "outputs": [],
   "metadata": {}
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "source": [
    "for iteration in range(20):\n",
    "    pred = input*weight\n",
    "    error = (pred - goal_pred)**2\n",
    "    derivative = input*(pred - goal_pred)\n",
    "    weight = weight - (alpha*derivative)\n",
    "\n",
    "    print(f'Error : {error} Prediction : {pred}')"
   ],
